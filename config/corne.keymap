#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/bt.h>

#define DEFAULT 0
#define LOWER   1
#define RAISE   2

/ {
    behaviors {
        hm: homerow_mods {
            compatible = "zmk,behavior-hold-tap";
            label = "HOMEROW_MODS";
            #binding-cells = <2>;
            tapping-term-ms = <200>;
            quick_tap_ms = <0>;
            flavor = "tap-preferred";
            bindings = <&kp>, <&kp>;
        };
    };
};


/ {
        keymap {
                compatible = "zmk,keymap";

                default_layer {
// -----------------------------------------------------------------------------------------
// | ESC |  Q  |  W  |  E  |  R  |  T  |   |  Y  |  U   |  I  |  O  |  P  | ' |
// | TAB |  A  |  S  |  D  |  F  |  G  |   |  H  |  J   |  K  |  L  |  ;  | BSPC|
// | RSE |  Z  |  X  |  C  |  V  |  B  |   |  N  |  M   |  ,  |  .  |  /  | RCTRL|
//                    | ALT | SHIFT | LWR |   | SPC | ENT  | GUI |
                        bindings = <
   &kp ESC &kp Q       &kp W       &kp E   &kp R   &kp T      &kp Y &kp U    &kp I     &kp O       &kp P          &kp SQT
   &kp TAB &hm LSHFT A &hm LCTRL S &hm LOWER D &hm RAISE F &kp G      &kp H &hm RAISE J  &hm LOWER K   &hm RCTRL L &hm RSHFT SEMI &kp BSPC
   &mo 2   &kp Z       &kp X       &kp C   &kp V   &kp B      &kp N &kp M    &kp COMMA &kp DOT     &kp FSLH       &kp RCTRL
                               &kp LALT &kp LSHFT &mo 1       &kp SPACE &kp RET &kp RGUI
                        >;
                };
                lower_layer {
// -----------------------------------------------------------------------------------------
// |  ESC |  1  |  2  |  3  |  4  |  5  |   |  6  |  7  |  8  |  9  |  0  | DEL  |
// | VOLU | LFT | DWN |  UP | RGT |VOLU |   | VOLU| LFT | DWN |  UP | RGT | BSPC |
// | SHFT |     |     |     |     |VOLD |   | VOLD| PREV| PLY | NXT |     |      |
//                    | GUI |     | SPC |   | ENT |     | ALT |
                        bindings = <
   &kp ESC    &kp N1    &kp N2      &kp N3    &kp N4       &kp N5            &kp N7     &kp N8    &kp N9    &kp N0    &kp DEL    &kp DEL
   &trans     &kp LEFT  &kp DOWN    &kp UP    &kp RIGHT    &kp C_VOL_UP      &kp N4       &kp N5            &kp N6  &kp UP     &kp BSPC  &kp BSPC
   &kp LSHFT  &trans    &kp C_PREV  &kp C_PP  &kp C_NEXT   &kp C_VOL_DN      &kp N1    &kp N2      &kp N3  &kp C_NEXT &trans    &trans
                                        &kp LGUI     &trans       &kp SPACE         &kp RET        &trans     &kp RALT
                        >;
                };

                raise_layer {
// -----------------------------------------------------------------------------------------
// |  ESC |  !  |  @  |  #  |  $  |  %  |   |  ^  |  &  |  *  |  (  |  )  | BKSP |
// | BTCLR| BT1 | BT2 | BT3 | BT4 | BT5 |   |  -  |  =  |  {  |  }  | "|" |  `   |
// | SHFT |     |     |     |     |     |   |  _  |  +  |  [  |  ]  |  \  |  ~   | // TODO: Fix this row when &mkp is committed
//                    | GUI |     | SPC |   | ENT |     | ALT |
                        bindings = <
   &kp  ESC  &kp EXCL  &kp AT  &kp HASH  &kp DLLR  &kp PRCNT   &kp CARET &kp AMPS  &kp KP_MULTIPLY &kp LPAR &kp RPAR &kp BSPC
   &kp LCTRL &trans    &trans  &trans    &trans    &trans      &kp MINUS &kp EQUAL &kp LBKT        &kp RBKT &kp PIPE &kp GRAVE
   &kp LSHFT &trans    &trans  &trans    &trans    &trans      &trans    &trans    &trans          &trans   &kp BSLH &kp TILDE
                                   &kp LGUI &trans &kp SPACE   &kp RET &trans &kp RALT
                        >;
                };
        };
};
